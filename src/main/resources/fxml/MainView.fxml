<?xml version="1.0" encoding="UTF-8"?>

        <?import javafx.scene.control.*?>
        <?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.climatemonitoring.client.MainController">
    <top>
        <VBox spacing="10" alignment="CENTER">
            <Label text="Climate Monitoring" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
            <HBox spacing="10" alignment="CENTER">
                <TextField fx:id="nameField" promptText="Area Name"/>
                <TextField fx:id="stateField" promptText="State"/>
                <TextField fx:id="latitudeField" promptText="Latitude"/>
                <TextField fx:id="longitudeField" promptText="Longitude"/>
                <Button text="Cerca per denominazione" onAction="#cercaAreaGeograficaCoordinate"/>
                <Button text="Cerca per lat long" onAction="#cercaAreaGeograficaCoordinate"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <TabPane fx:id="mainTabPane">
            <Tab text="Search Results">
                <TableView fx:id="resultsTable">
                    <columns>
                        <TableColumn fx:id="nameColumn" text="Name"/>
                        <TableColumn fx:id="stateColumn" text="State"/>
                        <TableColumn fx:id="latitudeColumn" text="Latitude"/>
                        <TableColumn fx:id="longitudeColumn" text="Longitude"/>
                    </columns>
                </TableView>
            </Tab>
            <Tab text="Climate Data"/>
            <Tab text="History"/>
        </TabPane>
    </center>

    <left>
        <VBox fx:id="operatorMenu" spacing="10" style="-fx-padding: 10;">
            <Label text="Operator Menu" style="-fx-font-weight: bold;"/>
            <Button text="Register Monitoring Center" onAction="#handleRegisterCenter"/>
            <Button text="Add Area of Interest" onAction="#handleAddArea"/>
            <Button text="Insert Climate Parameters" onAction="#handleInsertParameters"/>
            <Button text="Logout" onAction="#handleLogout"/>a
        </VBox>
    </left>
</BorderPane>
