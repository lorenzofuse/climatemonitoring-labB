        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentArea">
            <VBox spacing="10" alignment="CENTER">
                <TextField fx:id="searchField" promptText="Inserisci il nome della cittÃ "/>
                <TextField fx:id="stateField" promptText="Inserisci lo stato"/>
