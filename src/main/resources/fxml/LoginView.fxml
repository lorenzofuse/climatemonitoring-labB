<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.climatemonitoring.client.LoginController">
    <center>
        <VBox spacing="10" alignment="CENTER">
            <Label text="Climate Monitoring - Login" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
            <TextField fx:id="usernameField" promptText="Username"/>
            <PasswordField fx:id="passwordField" promptText="Password"/>
            <HBox spacing="10" alignment="CENTER">
                <Button text="Login" onAction="#handleLogin"/>
                <Button text="Register" onAction="#handleRegister"/>
                <Button text="Continue as Guest" onAction="#handleCitizen"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>